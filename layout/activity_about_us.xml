<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context=".activity.AboutUsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:tint="@android:color/black"
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="backBtn"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/backBtn"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginLeft="15dp"
                    fontPath="fonts/solaiman_lipi.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:text="@string/about_us"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/hight_text_sizee"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/mujib"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:background="@color/gold_color"/>

            <TextView
                fontPath="fonts/solaiman_lipi.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="@string/abaut_us1"
                android:textColor="@color/black"
                android:textSize="@dimen/description_text_size"
                tools:ignore="MissingPrefix" />

            <TextView
              android:textStyle="bold"
                android:fontFamily="@font/lato_regular"
                fontPath="fonts/solaiman_lipi.ttf"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/description_text_size"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="National Implementation Committee"
                tools:ignore="MissingPrefix" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="@font/lato_regular"
                    fontPath="fonts/solaiman_lipi.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/description_text_size"
                    android:textColor="@color/black"
                    android:text="Powered By"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:fontFamily="@font/lato_regular"
                    fontPath="fonts/solaiman_lipi.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/hight_text_sizee"
                    android:layout_marginLeft="6dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="ICT Division"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ict_logo"/>

            <TextView
                android:fontFamily="@font/lato_regular"
                fontPath="fonts/solaiman_lipi.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="and"
                tools:ignore="MissingPrefix" />
            <TextView
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                fontPath="fonts/solaiman_lipi.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@string/bangabandhu_memorial_trust"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>