<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CommitteeActionPlanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:tint="@android:color/black"
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="backBtn"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/backBtn"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginLeft="15dp"
                    fontPath="fonts/solaiman_lipi.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/committee_action_plan"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/hight_text_sizee"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="30dp"
                android:id="@+id/profile_image"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/mujib"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="12dp"
                android:background="@color/gold_color"/>

            <TextView
                android:fontFamily="@font/lato_regular"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/description_text_size"
                fontPath="fonts/solaiman_lipi.ttf"
                android:text="@string/committee_action_plan"
                tools:ignore="MissingPrefix" />

            <TextView
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/description_text_size"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:lineSpacingExtra="@dimen/line_hide"
                fontPath="fonts/solaiman_lipi.ttf"
                android:text="@string/action_plan"
                tools:ignore="MissingPrefix" />

     <!--       <Button
                android:fontFamily="@font/lato_regular"
                fontPath="fonts/solaiman_lipi.ttf"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/media_btn_bg"
                android:text="@string/read_action_plan"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                tools:ignore="MissingPrefix" />-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="actionPlan"
        android:layout_marginTop="6dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/image1IV"
                android:layout_weight="4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/download_icon"/>
            <TextView
                android:fontFamily="@font/lato_regular"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:minLines="1"
                android:textSize="@dimen/description_text_size"
                fontPath="fonts/lato_regular.ttf"
                android:text="@string/mujib_100_action_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="actionPlanRead"
        android:layout_marginTop="6dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_weight="4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/download_icon"/>
            <TextView
                android:fontFamily="@font/lato_regular"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:minLines="1"
                android:textSize="@dimen/description_text_size"
                fontPath="fonts/lato_regular.ttf"
                android:text="@string/mujib_100_action_plan_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>