<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginBottom="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/eventImageIV"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop" />

    <LinearLayout

        android:background="@drawable/global_news_image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/titleTV"
                android:fontFamily="@font/lato_regular"
                fontPath="fonts/solaiman_lipi.ttf"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="Joy Bangla Concert 2020"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="18sp"
                tools:ignore="DuplicateIds,MissingPrefix" />


            <Button
                android:fontFamily="@font/lato_regular"
                android:id="@+id/readMoreBtn"
                fontPath="fonts/solaiman_lipi.ttf"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:textSize="15dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/media_btn_bg"
                android:onClick="showGraphicNovel"
                android:text="@string/read_more"
                android:layout_marginRight="120dp"
                android:layout_marginLeft="120dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>