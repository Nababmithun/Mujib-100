<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/lato_regular"
                    fontPath="fonts/solaiman_lipi.ttf"
                    android:id="@+id/wishesTV"
                    android:lineSpacingExtra="@dimen/line_hide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bipul karbrbipul sarkarbipul sarkar"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/description_text_size"
                    android:gravity="center"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="5"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_height="1.5dp"
                    android:background="#808080"/>
                <ImageView
                    android:layout_marginBottom="4dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/quote"/>
                <View
                    android:layout_marginRight="70dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="1.5dp"
                    android:background="#808080"/>
            </LinearLayout>
            <TextView
                android:fontFamily="@font/lato_regular"
                fontPath="fonts/solaiman_lipi.ttf"
                android:id="@+id/nameTV"
                android:gravity="center"
                android:textStyle="bold"
                android:letterSpacing="-0.04"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bipul sarkar"
                android:textColor="@android:color/black"
                android:textSize="@dimen/hight_text_sizee"
                tools:ignore="MissingPrefix" />
            

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>