<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context=".activity.CommitteeActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:tint="@android:color/black"
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="backBtn"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/backBtn"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/solaiman_lipi.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/committee"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/hight_text_sizee"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOne"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <LinearLayout
                    android:weightSum="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/persons"
                        android:tint="@color/gold_color" />
                    <TextView
                        android:fontFamily="@font/lato_regular"
                        fontPath="fonts/solaiman_lipi.ttf"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4.2"
                        android:lineSpacingExtra="@dimen/line_hide"
                        android:id="@+id/text1"
                        android:layout_marginRight="4dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/committee_one"
                        android:textColor="@color/black"
                        android:textSize="@dimen/description_text_size"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTwo"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <LinearLayout
                    android:weightSum="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/persons"
                        android:tint="@color/gold_color" />
                    <TextView
                        android:fontFamily="@font/lato_regular"
                        fontPath="fonts/solaiman_lipi.ttf"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4.2"
                        android:lineSpacingExtra="@dimen/line_hide"
                        android:id="@+id/text2"
                        android:layout_marginRight="4dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/committee_two"
                        android:textColor="#000000"
                        android:textSize="@dimen/description_text_size"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="6dp"
                android:id="@+id/cardThree"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <LinearLayout
                    android:weightSum="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/persons"
                        android:tint="@color/gold_color" />
                    <TextView
                        android:fontFamily="@font/lato_regular"
                        fontPath="fonts/solaiman_lipi.ttf"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4.2"
                        android:lineSpacingExtra="@dimen/line_hide"
                        android:id="@+id/text3"
                        android:layout_marginRight="4dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/committee_three"
                        android:textColor="#000000"
                        android:textSize="@dimen/description_text_size"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFore"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <LinearLayout
                    android:weightSum="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/persons"
                        android:tint="@color/gold_color" />
                    <TextView
                        android:fontFamily="@font/lato_regular"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4.2"
                        android:lineSpacingExtra="@dimen/line_hide"
                        fontPath="fonts/solaiman_lipi.ttf"
                        android:id="@+id/text4"
                        android:layout_marginRight="4dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/website_content_committee"
                        android:textColor="#000000"
                        android:textSize="@dimen/description_text_size"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="6dp"
                android:id="@+id/cardFive"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <LinearLayout
                    android:weightSum="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/persons"
                        android:tint="@color/gold_color" />
                    <TextView
                        android:fontFamily="@font/lato_regular"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4.2"
                        android:lineSpacingExtra="@dimen/line_hide"
                        fontPath="fonts/solaiman_lipi.ttf"
                        android:id="@+id/text5"
                        android:layout_marginRight="4dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/website_creation_committee"
                        android:textColor="#000"
                        android:textSize="@dimen/description_text_size"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="6dp"
                android:id="@+id/cardSix"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <LinearLayout
                    android:weightSum="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/persons"
                        android:tint="@color/gold_color" />

                    <TextView
                        android:fontFamily="@font/lato_regular"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4.2"
                        android:lineSpacingExtra="@dimen/line_hide"
                        fontPath="fonts/solaiman_lipi.ttf"
                        android:id="@+id/text6"
                        android:layout_marginRight="4dp"
                        android:layout_width="0dp"
                        android:textSize="@dimen/description_text_size"
                        android:layout_height="wrap_content"
                        android:text="@string/committee_workshop"
                        android:textColor="#000"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>