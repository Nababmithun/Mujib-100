<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        app:cardCornerRadius="2dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/timeLineImageIV"

                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="250dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:fontFamily="@font/lato_regular"
                    fontPath="fonts/lato_regular.ttf"
                    android:id="@+id/timeLineYearTV"
                    android:text="1920"
                    android:textSize="@dimen/hight_text_sizee"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:fontFamily="@font/lato_regular"
                    android:lineSpacingExtra="@dimen/line_hide"
                    fontPath="fonts/lato_regular.ttf"
                    android:id="@+id/timeLineDescriptionTV"
                    android:layout_marginTop="8dp"
                    android:minLines="5"
                    android:textSize="@dimen/description_text_size"

                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>




</LinearLayout>