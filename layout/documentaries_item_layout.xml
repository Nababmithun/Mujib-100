<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="2dp"
    android:backgroundTint="@android:color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/thumbleIV"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/specess" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="#f4b800"
                    android:alpha=".75"
                    android:layout_centerInParent="true"
                    android:src="@drawable/play_ducumentris"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="3"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:fontFamily="@font/lato_regular"
                fontPath="fonts/solaiman_lipi.ttf"
                android:lineSpacingExtra="@dimen/line_hide"
                android:id="@+id/captionTV"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:textColor="@android:color/black"
                android:text="Bangabandhu Sheikh Mujibur Rahman delivered an important speech at the Central Shaheed Minar on National Martyrâ€™s Day...."
                android:textSize="@dimen/description_text_size"
                tools:ignore="MissingPrefix" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>