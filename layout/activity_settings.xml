<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cadllMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".activity.SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:tint="@android:color/black"
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="backBtn"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/backBtn"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginLeft="15dp"
                    fontPath="fonts/solaiman_lipi.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:text="@string/settings"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/hight_text_sizee"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <androidx.cardview.widget.CardView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:onClick="goLanguageChange"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/world"
                    android:layout_width="27dp"
                    android:layout_height="27dp"/>

                <TextView
                    android:fontFamily="@font/lato_regular"
                    android:layout_width="match_parent"
                    android:text="@string/language"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:layout_marginLeft="@dimen/hight_text_sizee"
                    android:layout_gravity="center_vertical"
                    fontPath="fonts/lato_regular.ttf"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_color"/>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/star"
                    android:layout_width="27dp"
                    android:layout_height="27dp"/>

                <TextView
                    android:fontFamily="@font/lato_regular"
                    android:layout_width="match_parent"
                    android:text="@string/rate_us"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:layout_marginLeft="@dimen/hight_text_sizee"
                    android:layout_gravity="center_vertical"
                    fontPath="fonts/lato_regular.ttf"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_color"/>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/share"
                    android:layout_width="27dp"
                    android:layout_height="27dp"/>

                <TextView
                    android:fontFamily="@font/lato_regular"
                    android:layout_width="match_parent"
                    android:text="@string/share_this_app"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:layout_marginLeft="@dimen/hight_text_sizee"
                    android:layout_gravity="center_vertical"
                    fontPath="fonts/lato_regular.ttf"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_color"/>

            <LinearLayout
                android:onClick="goAboutUs"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/info"
                    android:layout_width="27dp"
                    android:layout_height="27dp"/>

                <TextView
                    android:fontFamily="@font/lato_regular"
                    android:layout_width="match_parent"
                    android:text="@string/about_us"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:layout_marginLeft="@dimen/hight_text_sizee"
                    android:layout_gravity="center_vertical"
                    fontPath="fonts/lato_regular.ttf"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/gray_color"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>