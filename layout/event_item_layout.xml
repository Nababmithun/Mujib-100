<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="18dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/eventImageIV"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/description_text_size"
                    android:gravity="center"
                    fontPath="fonts/solaiman_lipi.ttf"
                    android:id="@+id/eventDateTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:text=""
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:fontFamily="@font/lato_regular"
                    fontPath="fonts/solaiman_lipi.ttf"
                    android:id="@+id/titleTV"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Joy Bangla Concert 2020"
                    android:textColor="#000"
                    android:textSize="@dimen/hight_text_sizee"
                    tools:ignore="MissingPrefix" />


                <TextView
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular"
                    fontPath="fonts/solaiman_lipi.ttf"
                    android:id="@+id/locationTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:text="bongobondhu antorjatik sommelon kendro"
                    android:textColor="#000"
                    android:textSize="@dimen/description_text_size"
                    android:layout_marginBottom="24dp"
                    tools:ignore="MissingPrefix" />

                <Button
                    android:id="@+id/rsvpBtn"
                    fontPath="fonts/solaiman_lipi.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/media_btn_bg"
                    android:onClick="showGraphicNovel"
                    android:text="@string/rsvp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>






</LinearLayout>